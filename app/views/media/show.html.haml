- model_class = Medium
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:context) + ':'
  %br
  = @medium.context
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @medium.user_id
%p
  %strong= model_class.human_attribute_name(:token) + ':'
  %br
  = @medium.token
%p
  %strong= model_class.human_attribute_name(:week_session_id) + ':'
  %br
  = @medium.week_session_id
%p
  %strong= model_class.human_attribute_name(:due_date) + ':'
  %br
  = @medium.due_date

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), media_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_medium_path(@medium), :class => 'btn btn-primary'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), medium_path(@medium), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
