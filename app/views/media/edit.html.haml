- model_class = Medium
.page-header
  %h1=t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human, :default => "Submit Final Work")
= simple_form_for @medium, :html => { :class => 'form-horizontal' } do |f|
  = f.text_area :context,:class => "redactor", :rows => 40, :cols => 120
  / = f.input :user_id
  / = f.input :token
  / = f.input :week_session_id
  / = f.input :due_date
  .form-actions
    = f.button :submit,"Submit Work", :class => 'btn btn-primary'
    = link_to  "Cancel", root_path, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
