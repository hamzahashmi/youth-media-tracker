.form-horizontal
  %legend
    Sign in
  %fieldset
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f|
      = devise_error_messages!
      .form-group
        = f.label :email,class: "col-sm-2 control-label"
        .col-sm-6
          = f.email_field :email, :autofocus => true, class: 'form-control'
          - if devise_mapping.registerable?
            = link_to 'Sign up', new_registration_path(resource_name), class: 'left'
      .form-group
        = f.label :password,class: "col-sm-2 control-label"
        .col-sm-6
          = f.password_field :password, class: 'form-control'
          - if devise_mapping.recoverable?
            = link_to "Forgot password?", new_password_path(resource_name), class: 'top'
      .col-sm-6.col-sm-offset-2
        = f.submit 'Sign in', :class => 'btn btn-primary',:id => 'sign_in'
        - if devise_mapping.rememberable?
          .checkbox{:style => "width:150px"}
            %label
              = f.check_box :remember_me
              Remember me
