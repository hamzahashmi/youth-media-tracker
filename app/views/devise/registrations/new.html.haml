.form-horizontal
  %legend
    Sign up
  %fieldset
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f|
      = devise_error_messages!
      = render :partial => "users_fields"  , :locals => {:f => f}
      .form-group
        = f.label :password
        = f.password_field :password, placeholder: "Enter a password", class: 'form-control'
      .form-group
        = f.label :password_confirmation
        = f.password_field :password_confirmation, placeholder: "Confirm the password", class: 'form-control'
      = f.submit 'Sign up', :class => 'btn btn-primary', :id => 'submit_'
