.container
  - if notice
    .alert.alert-dismissable.alert-info
      %button.close{"data-dismiss" => "alert", type: "button"}
        %span{"aria-hidden" => "true"} &times;
      = notice
  - if alert
    .alert.alert-dismissable.alert-danger
      %button.close{"data-dismiss" => "alert", type: "button"}
        %span{"aria-hidden" => "true"} &times;
      = alert
      - if @model.errors.any?
        %ul
          - @model.errors.each do |field, error|
            %li
              %b
                = field
              = error
  .row
    .col-sm-12
      = up_render(@model)
