
<%= render 'shared/errors', obj: @pitch %>

<div class = 'well'>
<%= form_for @pitch do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br/>
<%= f.label :description %>
  <%= f.text_area :description, rows: '5' %>
  <div class = 'well'>
    <%= f.label "Categories" %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb|%>
    <% cb.label(class: "checkbox inline") {cb.check_box(class: "checkbox") + cb.text} %>
  <% end %>
  </div>

  <%= f.submit(@pitch.new_record? ? 'Create Pitch' : 'Update Pitch', class: 'btn btn-primary') %>
<% end %>
</div>
