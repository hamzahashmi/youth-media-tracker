= simple_form_for @pitch, :html => { :class => 'form-horizontal' } do |f|
  %legend
    Submit a New Pitch
  %fieldset
    .form-group
      = f.input :name, :class => "form-control" 
    .form-group
      = f.select :media , Pitch.media_types, :class => "form-control" 
      = f.select :category, Pitch.categories , :class => "form-control" 
    .form-group
      = f.text_area :description, :class => "form-control" 
    .form-actions
      = f.button :submit, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), pitches_path, :class => 'btn'
